import java.util.Arrays;

public class SecondLargestEasy {

    public static void main(String[] args) {

        int[] arr = {10, 20, 30, 40};

        // Sort the array
        Arrays.sort(arr);

        // Print second largest element
        System.out.println("Second Largest Element: " + arr[arr.length - 2]);
    }
}
